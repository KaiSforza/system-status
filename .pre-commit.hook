#!/bin/bash

# Verify that tests work, but only the changes made in the index.
_setup() {
  git stash save --keep-index -q "__PRECOMMITSTASH__"
}

_bad_cleanup() {
  git stash pop
  exit 1
}
_cleanup() {
  git stash pop -q
}

trap _bad_cleanup ERR HUP INT

_setup
python -m unittest discover
python2 -m unittest discover
_cleanup
